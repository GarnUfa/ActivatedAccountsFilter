<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ActivatedAccountsFilter"
        xmlns:local2="clr-namespace:ActivatedAccountsFilter.ViewModel"
        xmlns:Accessibility="clr-namespace:Accessibility;assembly=Accessibility" x:Class="ActivatedAccountsFilter.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local2:ActivatedAccountsFilter_VM/>
    </Window.DataContext>
    <Grid>
        <ListView x:Name="LV" Margin="0,0,400,0" ItemsSource="{Binding huilo}">

            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding login}" Header="Модель" />
                    <GridViewColumn DisplayMemberBinding="{Binding header}" Width="100" Header="Компания"/>
                </GridView>
            </ListView.View>
     
        </ListView>
        <Button Content="Button" HorizontalAlignment="Left" Margin="582,38,0,0" VerticalAlignment="Top" Command="{Binding openCommand}"  />
        <Button Content="Button" HorizontalAlignment="Left" Margin="562,262,0,0" VerticalAlignment="Top" Click="Button_Click"  />
    </Grid>
</Window>
